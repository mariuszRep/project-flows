# Environment configuration for Project Flows MCP System
# Copy this file to .env and customize the values

# Database Configuration
POSTGRES_DB=mcp_tasks
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_password

# MCP Server Configuration
NODE_ENV=production
DATABASE_URL=postgresql://mcp_user:mcp_password@postgres:5432/mcp_tasks

# Database connection details (used by applications)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Development overrides (uncomment for local development)
# NODE_ENV=development
# DATABASE_URL=postgresql://mcp_user:mcp_password@localhost:5432/mcp_tasks
# POSTGRES_HOST=localhost